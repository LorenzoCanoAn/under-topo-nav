<?xml version="1.0"?>
<launch>
    <arg name="world_file_path" default="/home/lorenzo/catkin_ws/src/subt_gazebo/worlds/w2.world"/>
    <arg name="gui" default="true"/>
    <arg name="img_type" default="angles"/>

    <include file="$(find tunnel_navigation_launch)/launch/simplest_env.launch">
      <arg name="world_file_path" value="$(arg world_file_path)"/> 
      <arg name="gui" value="$(arg gui)"/>
    </include>

    <node name="pcl_to_img" pkg="pointcloud_to_image" type="ptcl_to_img_node.py" output="screen">
      <remap from="pointcloud_topic" to="/velodyne_points"/>
      <remap from="image_topic" to="/lidar_image"/>
      <param name="image_type" type="str" value="$(arg img_type)" />
    </node>

</launch>